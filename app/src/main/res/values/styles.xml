<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CategoryView.Title.SansSerifNormal" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/category_view_title_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">"sans-serif-normal"</item>
    </style>

    <style name="ProductList.Action.Text.SansSerifNormal" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/product_list_action_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">"sans-serif-normal"</item>
    </style>

    <style name="Review.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/small_content_text</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">"sans-serif-normal"</item>
    </style>

    <style name="Review.Author" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/small_content_text</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">"sans-serif-thin"</item>
    </style>

    <style name="Form.Error.Message" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/form_error_message</item>
        <item name="android:textColor">@color/utility_red</item>
        <item name="android:fontFamily">"sans-serif-normal"</item>
    </style>

    <style name="Form.Common.Label" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/form_common_label</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">"sans-serif-normal"</item>
    </style>

    <style name="Form.Input.Label" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/form_input_label</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">"sans-serif-normal"</item>
    </style>

    <style name="Content.Text" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/content_text</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">"sans-serif-normal"</item>
    </style>

    <style name="Sub.Content.Text" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/sub_content_text</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">"sans-serif-normal"</item>
    </style>

    <style name="Medium.Sub.Content.Text" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/sub_content_text</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="Small.Content.Text" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/small_content_text</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">"sans-serif-normal"</item>
    </style>

    <style name="Medium.Content.Text" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/content_text</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="Sub.Header" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/sub_header</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
